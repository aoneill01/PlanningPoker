@model string

@{
    ViewBag.Title = "Planning Poker";
}

<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Room @Model</span></a>
        </div>
        <form class="navbar-form navbar-right">
            <a href="#" class="btn btn-default" data-bind="click: nextHand">Next Hand <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
        </form>
    </div>
</nav>

<div data-bind="foreach: players" style="text-align: center;">
    <section class="hand" data-bind="css: { pick: picked, flip: $root.flip }">
        <div class="card">
            <figure class="front"></figure>
        </div><div class="card">
            <figure class="front"></figure>
        </div><div class="card">
            <figure class="front"></figure>
            <figure class="back" data-bind="html: formattedCard"></figure>
        </div><div class="card">
            <figure class="front"></figure>
        </div><div class="card">
            <figure class="front"></figure>
        </div>
        <div class="name" data-bind="text: name"></div>
    </section>
</div>

@section scripts {
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script src="~/signalr/hubs"></script>

    <script>
        window.room = "@Model";
    </script>

    <script src="~/Scripts/room.js"></script>
}

@section head {
    <link href="~/Content/room.css" rel="stylesheet" />
}
