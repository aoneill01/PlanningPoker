
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="container">
    <input type="text" id="card" />
    <input type="button" id="sendmessage" value="Pick" />
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            var pokerHubProxy = $.connection.pokerHub;

            pokerHubProxy.state.name = prompt('Enter your name:', '')
            pokerHubProxy.state.room = prompt('Enter the room id', '');

            $.connection.hub.start().done(function () {
                pokerHubProxy.server.join();

                $('#sendmessage').click(function () {
                    pokerHubProxy.server.pick($('#card').val());
                });
            });
        });
    </script>
}
