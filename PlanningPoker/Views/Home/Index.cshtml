@{
    ViewBag.Title = "Planning Poker";
}

<div class="banner">
    <div class="container">
        <div class="row">
            <img src="~/Content/logo.svg" />
            <div class="banner-content">
                <h1>Planning Poker</h1>
                <p><a href="@Url.Action("Index", "Player")" class="btn btn-primary btn-lg">Join a Room <i class="fa fa-sign-in" aria-hidden="true"></i></a> <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#roomModal">Host a Room <i class="fa fa-users" aria-hidden="true"></i></button></p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="well well-lg">
        <p>This site assits in playing <a href="https://en.wikipedia.org/wiki/Planning_poker" target="_blank">planning poker</a>. 
            <ol>
                <li><a href="@Url.Action("Index", "Presenter")">Host a room</a> and display it on a screen in the meeting room.</li>
                <li>Individuals can <a href="@Url.Action("Index", "Player")">join the room</a> on mobile devices to make their estimates.</li>
                <li>When all people in the room have made a selection, the results are displayed in the room.</li>
            </ol>
        </p>
    </div>
</div>

<div class="modal fade" id="roomModal" tabindex="-1" role="dialog" aria-labelledby="roomModalLabel">
@using (Html.BeginForm("Index", "Presenter"))
{
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="roomModalLabel">Create Room</h4>
            </div>
            <div class="modal-body">                
                <div class="form-group">
                    <label for="recipient-name" class="control-label">Room Name:</label>
                    <input type="text" class="form-control" id="id" name="id">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
}
</div>

@section head {
    <style>
        
        img { 
            float: left; 
            padding: 15px;
        }
        .banner {
            background: linear-gradient(170deg, #AD1457, #1976D2);
            color: white;
        }
        .banner h1 {
            font-size: 60px;
        }
        .banner-content {
            margin-left: 255px;
        }
        .banner img {
            display: none;
        }
        .banner-content {
            margin-left: 15px;
        }
        .well {
            margin-top: 15px;
        }
        @@media screen and (min-width: 768px) {
            .banner-content {
                margin-left: 255px;
            }
            .banner img {
                display: inherit;
            }
        }
    </style>
}
    